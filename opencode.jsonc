{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "plugin": [
        // keep it the last element
        "@tarquinen/opencode-dcp@latest",
    ],
    "share": "disabled",
    "autoupdate": true,
    "permission": {
        "skill": "allow",
        "bash": {
            "*": "ask",
        },
        "edit": {
            "**/*.env*": "deny",
            "**/*.key": "deny",
            "**/*.secret": "deny",
            "node_modules/**": "deny",
            ".git/**": "deny",
        },
        "read": {
            "**/*.env*": "deny",
            "**/*.key": "deny",
            "**/*.secret": "deny",
            "node_modules/**": "deny",
            ".git/**": "deny",
        },
    },
    "command": {
        "snyk": {
            "template": "Run `snyk test` to check for security vulnerabilities.",
            "description": "Run Snyk security test",
            "agent": "build",
        },
    },
    "mcp": {
        "snyk": {
            "type": "local",
            "enabled": true,
            "command": [
                "snyk",
                "mcp",
                "-t",
                "stdio"
            ],
        },
    },
}
